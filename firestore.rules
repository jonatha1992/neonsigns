rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    // Admin users must be explicitly added in Firebase Console
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'tecnofusion.it@gmail.com';
    }

    // Gallery items collection
    match /gallery_items/{itemId} {
      // Anyone can read active items
      allow read: if resource.data.isActive == true;

      // Only admins can read inactive items
      allow read: if isAdmin() && resource.data.isActive == false;

      // Only admins can create, update, or delete
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Admin users collection (optional - for future expansion)
    match /admin_users/{userId} {
      allow read, write: if isAdmin();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
