rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for gallery collections
    match /gallery/{itemId} {
      allow read: if true;
      // Writes require authenticated users (adjust rules to your auth model)
      allow write: if request.auth != null;
    }

    match /gallery_items/{itemId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: deny other operations to protect data
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
