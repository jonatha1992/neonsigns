rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'tecnofusion.it@gmail.com';
    }

    // Helper function to validate image file
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }

    // Gallery images - allow read/write during development
    match /gallery/{allPaths=**} {
      // Public read access for gallery images is allowed
      allow read: if true;
      // Writes require authenticated users (and optionally further admin checks)
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Temporary uploads - only admins can read/write
    match /temp/{allPaths=**} {
      allow read, write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
